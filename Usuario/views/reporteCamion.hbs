<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
    <!--Tipo de letra con Google Fonts-->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Fredoka:wght@300..700&family=Quicksand:wght@300..700&display=swap" rel="stylesheet">    
    <style>
        body {
            font-family: 'Quicksand', sans-serif;
        }
        * {
            padding-top: 20px;
            padding-bottom: 20px;
        }
    </style>
    <title>Reportar Camión</title>
</head>

<body>
    <div class="cont-rep-usu">
        <h1>Reportar Camión</h1>

        <form id="reportesCamion" action="/guardar-reporte-camion" method="POST" enctype="multipart/form-data" class="form-report-usu">
            <label for="nombre">Nombre de Usuario:</label>
            <input type="text" id="nombre" name="nombre" required class="espacio-datos-usu">

            <label for="unidad">Número de Unidad:</label>
            <input type="text" id="unidad" name="unidad" required class="espacio-datos-usu">

            <label for="ruta">Ruta:</label>
            <input type="text" id="ruta" name="ruta" required class="espacio-datos-usu">

            <label for="descripcion">Descripción del Problema:</label>
            <textarea id="descripcion" name="descripcion" rows="4" required class="coment-space-usu"></textarea>

            <label for="foto">Subir Fotografía:</label>
            <input type="file" id="foto" name="foto" accept="image/*" required class="btn-up-imgg-usu">

            <button type="submit" class="btn-env-report-usu">Enviar Reporte</button>
        </form>
        <a href="/home" class="back-ini">Volver</a>
    </div>
    



<script>
    document.getElementById("reportesCamion").addEventListener("submit", function(event) {
        event.preventDefault();

        fetch(this.action, {
            method: this.method,
            body: new FormData(this)
        })
        .then(response => {
            if (response.ok) {
                alert("Se envió el reporte enviado con éxito.");
                window.location.href = "/home"; 
            } else {
                alert("Error al enviar el reporte. Inténtalo de nuevo.");
            }
        })
        .catch(error => {
            alert("Error en la conexión.");
            console.error("Error:", error);
        });
    });
</script>


</body>

</html>